# Linear API Key (personal key from Linear settings)
LINEAR_API_KEY=lin_api_xxx

# Slack User Token (xoxp- prefix, from Slack app OAuth)
SLACK_USER_TOKEN=xoxp-xxx

# Notion Integration Token (from Notion integrations page)
NOTION_TOKEN=secret_xxx

# Google OAuth credentials (download from Google Cloud Console: APIs & Services > Credentials > OAuth 2.0 Client IDs)
GOOGLE_OAUTH_CLIENT_FILE=./.secrets/client_secret.json

# Google OAuth token storage (auto-generated after first authentication)
GOOGLE_TOKEN_FILE=./.secrets/google_token.json

# Avoma API Key (from Avoma settings)
AVOMA_API_KEY=xxx

# HubSpot - Private App access token
# Create at: Settings > Integrations > Private Apps
# Required scopes: crm.objects.contacts.read, crm.objects.companies.read,
#   crm.objects.deals.read, crm.objects.quotes.read, crm.schemas.contacts.read, etc.
HUBSPOT_ACCESS_TOKEN=pat-na1-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
